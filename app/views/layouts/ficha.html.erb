<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= @titulo.nil? ? 'Nimbus' : @titulo %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>

<body>
<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
  <% if @head > 0 || @tabs.size > 0 %>
  <header class="mdl-layout__header">
    <% if @head > 0 %>
      <div class="mdl-layout__header-row">
        <span class="mdl-layout-title"> <%= @titulo %> </span>
        <div class="mdl-layout-spacer"></div>
        <nav class="mdl-navigation">
          <button class="cl-grabar mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-js-ripple-effect mdl-button--colored" onclick="mant_grabar()">
            <i class="material-icons">save</i>
          </button>
          &nbsp; &nbsp;
          <button class="cl-borrar mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-js-ripple-effect mdl-button--colored" onclick="mant_borrar()">
            <i class="material-icons">delete</i>
          </button>
          <% if @menu_r %>
            &nbsp; &nbsp;
            <button id="menu-r" class="mdl-button mdl-js-button mdl-button--icon">
              <i class="material-icons">more_vert</i>
            </button>

            <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect" for="menu-r">
              <% @menu_r.each {|k, v| %>
                <li class="mdl-menu__item"> <%= nt(k) %> </li>
              <% } %>
            </ul>
          <% end %>
        </nav>
      </div>
    <% end %>

    <% if @tabs.size > 0 %>
      <div class="mdl-layout__tab-bar mdl-js-ripple-effect">
        <% @tabs.each_with_index {|t, i| %>
          <a href="#t_<%= t %>" class="mdl-layout__tab <%= i==0 ? 'is-active' : '' %>" onclick="tabClick($('#t_<%= t %>'))"> <%= nt(t) %> </a>
        <% } %>
      </div>
    <% end %>
  </header>
  <% end %>

  <% if @menu_l %>
    <div class="mdl-layout__drawer">
      <% @menu_l.each {|k, v| %>
        <span class="mdl-layout-title"> <%= nt(k) %> </span>
      <% } %>
    </div>
  <% end %>

  <main class="mdl-layout__content">
    <div class="page-content">
      <%= gen_form({tab: 'pre'}) %>
      <%= yield :pre %>

      <% if @tabs.size > 0 %>
        <% @tabs.each_with_index {|t, i| %>
          <section class="mdl-layout__tab-panel <%= i==0 ? 'is-active' : '' %>" id="t_<%= t %>">
            <div class="page-content">
              <%= gen_form({tab: t}) %>
              <%= yield t.to_sym%>
              <% @hijos.each_with_index{|h, i| if h[:tab] == t then %>
                <iframe id="hijo_<%= i %>"></iframe>
              <% end } %>
            </div>
          </section>
        <% } %>
      <% end %>

      <%= gen_form({tab: 'post'}) %>
      <% @hijos.each_with_index{|h, i| if h[:tab] == 'post' then %>
        <iframe id="hijo_<%= i %>"></iframe>
      <% end } %>

      <%= yield %>
    </div>
  </main>
</div>

<%= yield :body %>

<% @dialogos.each {|d| %>
  <div id="<%= d[:id] %>">
    <%= gen_form({dlg: d[:id]}) %>
  </div>
<% } %>

<div id="dialog-nim-alert">
</div>

<div id="dialog-borrar" title="Borrado">
  <p>
    <span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span>
    El registro será eliminado.<br>¿Está seguro?
  </p>
</div>

</body>

<style>
  body {margin-top: 0px;}
  .mdl-grid {padding: 0;}
  .mdl-layout__content::-webkit-scrollbar {display: none;}
</style>

<script>
  <%= gen_js %>
  <%= @ajax.html_safe %>

  $("#dialog-nim-alert").dialog({
    autoOpen: false,
    resizable: false,
    modal: true,
    buttons: {
      "Aceptar": function() {
        $(this).dialog("close");
      }
    }
  });

  $("#dialog-borrar").dialog({
    autoOpen: false,
    resizable: false,
    //height:170,
    //width: 350,
    modal: true,
    buttons: {
      "Sí": function() {
        $(this).dialog("close");
        mant_borrar_ok();
      },
      No: function() {
        $(this).dialog("close");
      }
    }
  });

  <% @dialogos.each {|d| %>
    $("#<%= d[:id] %>" ).dialog({
      autoOpen: false,
      resizable: false,
      width: '100%',
      modal: true,
      title: "<%= d[:titulo] %>",
      buttons: {
        <% d[:botones].each {|b| %>
          "<%= b[:label] %>": function () {callFonServer("<%= b[:accion] %>");<%= (b[:close].nil? or b[:close]) ? '$( this ).dialog("close");'.html_safe : '' %>},
        <% } %>
      }
    });
  <% } %>

  function abreDialogo(d) {
    $("#" + d).dialog("open");
  }

  function historico() {
    <% if @fact.id and @fact.id > 0 %>
      window.open("/histo/" + _controlador + "/" + <%= @fact.id %>, "_blank", "location=no, menubar=no, status=no, toolbar=no" +
        ",height=800, width=1000" +
        ",left=" + (window.screenX + 10) +
        ",top=" + (window.screenY + 10)
    );
    <% end %>
  }

  function redimWindow() {
    <% @hijos.each_with_index{|h, i| %>
    f = $("#hijo_<%= i %>");
    wh = $(window).height();
    fh = wh - f.offset().top;
    //if (fh < wh/2) f.height(wh/2); else f.height(fh);
    f.height(fh);
    <% } %>
  }

  var hayCambios = false;

  window.onbeforeunload = function() {
    var jsHay = false;
    if (typeof jsCambios == "function") jsHay = jsCambios();
    if (hayCambios || jsHay) return('Hay cambios pendientes de grabar');
  }

  $(window).resize(redimWindow);

  $(window).load(function () {
    redimWindow();
    $("input,select,textarea").filter(":enabled").first().focus();
    //componentHandler.upgradeDom();
  });

  var _activeTab;
  function tabClick(tab) {
    _activeTab = tab;
    setTimeout(function(){_activeTab.find(':input').filter(':enabled').first().focus();},100);
  }
</script>

</html>
