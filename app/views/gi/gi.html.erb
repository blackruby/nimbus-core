<div id="titulo" class="centro">
  <%= @titulo %>
</div>

<div id="solapas">
  <ul>
    <% @tablas.each_key do |mod| %>
      <li><a href="#<%= mod %>"> <%= nt(mod) %> </a></li>
    <% end %>
  </ul>

  <% @tablas.each do |mod, tab| %>
    <div id="<%= mod %>">
      <ul id="<%= mod %>_m">
        <% tab.each do |t| %>
          <li id="<%= t %>"> <%= nt(t) %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

<style>
  .centro {text-align: center;}
</style>

<script>
  var tabla, fileName, abrirInforme = false;

  function selTabla(e, ui) {
    window.open('/gi?mod=' + $(ui.item).attr('id'), '_self');
  }

  $("#solapas").tabs();
  <% @tablas.each_key do |mod| %>
    $("#<%= mod %>_m").menu({select: selTabla});
  <% end %>
</script>
